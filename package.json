{
  "name": "remind-me",
  "version": "0.0.1",
  "private": false,
  "description": "Track TODOs and FIXMEs as GitHub issues",
  "author": "Kevin de Jong",
  "license": "GPL-3.0-or-later",
  "homepage": "https://github.com/dev-build-deploy/remind-me",
  "keywords": [
    "github",
    "action",
    "todo",
    "issues"
  ],
  "bugs": {
    "url": "https://github.com/dev-build-deploy/remind-me/issues"
  },
  "scripts": {
    "build": "ncc build -o lib/main src/entrypoints/main.ts",
    "test": "jest --coverage",
    "lint": "eslint --ext .ts .",
    "format": "prettier --write src/*.ts src/**/*.ts"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@dev-build-deploy/comment-it": "^0.1.0"
  },
  "engines": {
    "node": ">= 10.13.0"
  },
  "devDependencies": {
    "@octokit/plugin-rest-endpoint-methods": "^8.0.0",
    "@swc/core": "^1.3.67",
    "@swc/jest": "^0.2.26",
    "@types/node": "^18.16.16",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "ncc": "^0.3.6",
    "prettier": "^2.8.8",
    "typescript": "^5.1.6"
  }
}
